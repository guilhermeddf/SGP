<p></p>

<div class="ui container">
  <!-- NAVBAR -->
  <div class="ui menu"">
    <a href="#" class="item active"><strong>Projetos</strong></a>
    <%= link_to "Voltar", projects_path, class: 'item' %>
    <%= link_to "Editar", edit_project_path(@project), class: 'item' %>
    <%= link_to 'Excluír', @project, method: :delete, data: { confirm: 'Você tem certeza?' }, class: 'item' %>
  </div>
  <!-- /NAVBAR -->

  <!-- BREADCRUMB -->
  <div class="ui breadcrumb">
    <%= link_to "Projetos", projects_path, class: 'section' %>
    <div class="divider"> / </div>

    <div class="active section"><%= @project.name %></div>
  </div>
  <!-- /BREADCRUMB -->

  <p></p>

  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <p>
        <strong><span class="glyphicon glyphicon-triangle-right" aria-hidden="true"></span> Projeto:</strong>
        <%= @project.name %>
      </p>
      <p>
        <strong><span class="glyphicon glyphicon-stats" aria-hidden="true"></span> Size:</strong>
        <%= @project.size %> Story points
      </p>
      <p>
        <strong><span class="glyphicon glyphicon-calendar" aria-hidden="true"></span> Start date:</strong>
        <%= l @project.start_date %>
      </p>
      <p>
        <strong><span class="glyphicon glyphicon-calendar" aria-hidden="true"></span> End date:</strong>
        <%= l @project.end_date %>
      </p>
      <p>
        <strong><span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span> Local:</strong>
        <%= @project.local.name unless @project.local.nil? %>
      </p>

      <div class="ui teal progress" id="project-progress" data-percent="<%= @project.progress %>">
        <div class="bar"></div>
        <div class="label">
          Progresso <%= @project.progress %>%
        </div>
      </div>

    </div>
  </div>
  <p></p>

  <div class="ui four cards">

      <div class="card">
        <div class="content">
          <div class="header">Product Backlog</div>
          <div class="description">
            Lista de user stories (requisitos na visão do usuário)
          </div>
        </div>

        <button class="ui bottom attached button" onclick="window.location.href='<%= user_stories_path %>'">
          <i class="settings icon"></i>
          Gerenciar
        </button>
      </div>

      <div class="card">
        <div class="content">
          <div class="header">Sprints</div>
          <div class="description">
            Ciclos de trabalho da equipe
          </div>
        </div>

        <button class="ui bottom attached button" onclick="window.location.href='<%= sprints_path %>'">
          <i class="settings icon"></i>
          Gerenciar
        </button>
      </div>

      <div class="card">
        <div class="content">
          <div class="header">Releases</div>
          <div class="description">
            ......
          </div>
        </div>

        <button class="ui bottom attached button" onclick="window.location.href='<%= releases_path %>'">
          <i class="settings icon"></i>
          Gerenciar
        </button>
      </div>

      <div class="card">
        <div class="content">
          <div class="header">Membros</div>
          <div class="description">
            ......
          </div>
        </div>

        <button class="ui bottom attached button" onclick="window.location.href='<%= function_user_projects_path %>'">
          <i class="settings icon"></i>
          Gerenciar
        </button>
      </div>

      <div class="card">
        <div class="content">
          <div class="header">Temas</div>
          <div class="description">
            ......
          </div>
        </div>

        <button class="ui bottom attached button" onclick="window.location.href='<%= themes_path %>'">
          <i class="settings icon"></i>
          Gerenciar
        </button>
      </div>

      <div class="card">
        <div class="content">
          <div class="header">Critérios de aceitação</div>
          <div class="description">
            ......
          </div>
        </div>

        <button class="ui bottom attached button" onclick="window.location.href='<%= user_story_acceptance_criterions_path %>'">
          <i class="settings icon"></i>
          Gerenciar
        </button>
      </div>

      <div class="card">
        <div class="content">
          <div class="header">Tarefas</div>
          <div class="description">
            ......
          </div>
        </div>

        <button class="ui bottom attached button" onclick="window.location.href='<%= tasks_path %>'">
          <i class="settings icon"></i>
          Gerenciar
        </button>
      </div>

      <div class="card">
        <div class="content">
          <div class="header">Habilidades requeridas da tarefa</div>
          <div class="description">
            ......
          </div>
        </div>

        <button class="ui bottom attached button" onclick="window.location.href='<%= task_requirements_path %>'">
          <i class="settings icon"></i>
          Gerenciar
        </button>
      </div>
    </div>
  </div>

  <p></p>
  <p></p>
</div>

<script type="text/javascript">
  $('.progress').progress();
</script>