<p></p>

<div class="ui container">
  <div class="ui menu"">
    <a href="#" class="item active"><strong>Sprints</strong></a>
    <%= link_to "Novo", new_sprint_path, class: 'item' %>
  </div>

  <%= render 'sprints/breadcrumb' %>

  <table class="ui celled table">
    <thead>
      <tr>
                <th>Start date</th>
                <th>End date</th>
                <th>Planning start date</th>
                <th>Planning end date</th>
                <th>Execution start date</th>
                <th>Execution end date</th>
                <th>Review meeting date</th>
                <th>Retrospective meeting date</th>
                <th>Release</th>
                <th width="250">Ações</th>
      </tr>
    </thead>

    <tbody>
      <% @sprints.each do |sprint| %>
        <tr>
                    <td><%= sprint.start_date %></td>
                    <td><%= sprint.end_date %></td>
                    <td><%= sprint.planning_start_date %></td>
                    <td><%= sprint.planning_end_date %></td>
                    <td><%= sprint.execution_start_date %></td>
                    <td><%= sprint.execution_end_date %></td>
                    <td><%= sprint.review_meeting_date %></td>
                    <td><%= sprint.retrospective_meeting_date %></td>
                    <td><%= sprint.release_id %></td>
                    <td>
            <div class="ui buttons">
            <%= link_to 'Exibir', sprint, class: 'ui blue basic button' %>
            <%= link_to 'Editar', edit_sprint_path(sprint), class: 'ui blue basic button' %>
            <%= link_to 'Remover', sprint, method: :delete, data: { confirm: 'Você tem certeza?' }, class: 'ui red basic button' %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>